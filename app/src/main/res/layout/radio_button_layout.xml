<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EDCFCD"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/studentnameTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : Ispahan"
                android:layout_margin="7dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/studentrollTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll :  170117"
                android:layout_margin="7dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"

                /><TextView
            android:id="@+id/studentdeptTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department :  CSE"
            android:layout_margin="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/attendanceTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:layout_margin="7dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/attendanceTakeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioButton
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_present"
                android:text="Present"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"></RadioButton>
            <RadioButton
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_absent"
                android:text="Absent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"></RadioButton>

            </RadioGroup>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


