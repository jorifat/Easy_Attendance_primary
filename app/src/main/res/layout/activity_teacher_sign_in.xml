<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical"
    android:background="#FD9651"
    tools:context=".TeacherSignInActivity">

    <EditText
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:id="@+id/teacherSignInEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        ></EditText>
    <EditText
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/teacherSignInPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        ></EditText>
    <Button android:layout_margin="10dp"
        android:id="@+id/teacherSignInButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="@drawable/button_design"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        ></Button>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/teacherSignUpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up "
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"/>

</LinearLayout>